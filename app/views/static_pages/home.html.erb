<% provide(:title, "Home") %>
<!-- home_title includes primary title and the search circle found in _home_title.erb-->
<div class='row'>
   <%= render 'layouts/home_title'%>
</div>
<hr style='opacity: 0;'>
<!--Glossary circle-->
<%= link_to(
   raw("<div id='home_community_partner'>
           <div class='circleBase'>
               <span class='glyphicon glyphicon-briefcase'>
               </span>
               Community Partners
           </div>
       </div>"),
   partners_path)
   %>
<!--Image-->
<div class='home_image text-center col-md-3' >
   <%= image_tag 'grinnell-students-doing-engaged-work.JPG', class:'home_image'%>
</div>
<!--Home summary description  -->
<div class='home_summary'>
   <p class="title"> A digital toolbox for faculty</p>
   <p>
      interested in, currently building, or reflecting on 
      community engaged teaching, scholarship, and mentorship.
   </p>
</div>





<div class="container">
  <h2>Carousel</h2>
  <div id="abc" class="slide carousel" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <%= image_tag("slideshow 1.jpg", class:"w-100") %>
        <div class="carousel-caption">
          <h3>Image 1</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("slideshow 2.jpg", class:"w-100") %>
        <div class="carousel-caption">
          <h3>Image 2</h3>
        </div>
      </div>
    
      <div class="item">
        <%= image_tag("slideshow 3.jpg", class:"w-100") %>
        <div class="carousel-caption">
          <h3>Image 3</h3>
        </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#abc" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#abc" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>