<header class="main-nav container">
   <div class="container">
   <nav class="navbar-nav navbar-fixed-top">
      <!-- navbar for desktop -->
      
      <div class ="desktop-menu">
         <div class="logo">
            <%= link_to image_tag("grinnell-logo.png", border: 0, class:'logo'), 'https://www.grinnell.edu/', target:"_blank"%>
         </div>
         <ul class="menu-items">
            <li><%= link_to "Home", root_path, class:'home_link' %></li>
            <li><%= link_to "What Is CEL?", what_is_cel_path %></li>
            <li><%= link_to "Community Partnerships", community_partnerships_path %></li>
            <li><%= link_to "Course Design", course_design_path %></li>
            <li><%= link_to "Assessment", assessment_path %></li>
            <li><%= link_to "Implementation", implementation_path %></li>
            <li><%= link_to "Professional Development", professional_dev_path %></li>
            <li><%= link_to "Glossary", glossary_path %></li>
            <li><%= link_to "FAQ", faq_path %></li>
         </ul>
      </div>
      <!-- navbar for mobile -->
      <div class ="mobile-menu">
         <div class="top-side">
            <!-- logo -->
            <div class="logo">
               <%= link_to image_tag("grinnell-logo.png", border: 0, class:'logo'), 'https://www.grinnell.edu/', target:"_blank"%>
            </div>
            <!-- home -->
            <%= link_to "Home", root_path, class:'home_link' %>
            <!-- hamburger menu -->
            <a href="javascript:void(0);" class="icon" onclick="toggleHamburger()">
              <i class="fa fa-bars"></i>
            </a>
         </div>
         <ul class="menu-items" id="mobile-links">
             <li><%= link_to "What Is CEL?", what_is_cel_path %></li>
             <li><%= link_to "Community Partnerships", community_partnerships_path %></li>
             <li><%= link_to "Course Design", course_design_path %></li>
             <li><%= link_to "Assessment", assessment_path %></li>
             <li><%= link_to "Implementation", implementation_path %></li>
             <li><%= link_to "Professional Development", professional_dev_path %></li>
             <li><%= link_to "Glossary", glossary_path %></li>
             <li><%= link_to "FAQ", faq_path %></li>
         </ul>
         <script>
            function toggleHamburger() {
              let ham = document.getElementById("mobile-links");
             ham.classList.toggle("show");
            }
         </script>
      </div>
   </nav>
   </div>

</header>
